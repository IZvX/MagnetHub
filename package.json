{
  "name": "movie-downloader-electron",
  "version": "0.2.3",
  "description": "Electron app for downloading movies",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "author": "Yfz", 
  "license": "MIT", 
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.yfzprods.Keraview",
    "productName": "Keraview",
    "copyright": "Copyright Â© 2024 Yfz",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "publish": null,
    "win": {
      "target": "nsis",
      "icon": "bin/icons/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    },
    "extraResources": [
        "./server/"  
    ]

  },
  "dependencies": {
     "fs-extra": "^11.2.0",
     "express": "^4.21.2",
     "nyaapi": "^2.4.4",
     "socket.io": "^4.8.1",
     "torrent-search-api": "^2.1.4",
     "webtorrent": "^2.5.19",
     "xml2js": "^0.6.2",
     "xmldom": "^0.6.0"
  }
}